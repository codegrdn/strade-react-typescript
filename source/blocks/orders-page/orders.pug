.orders__content
    .orders__type
        .orders__type-item(data-index="1") Open Orders <span>(0)</span>
        .orders__type-item.orders__type-item--active(data-index="2") Order History
        .orders__type-item(data-index="3") Trade History
    .orders__inner.custom-scroll
        .orders__head
            .orders__head-title Order History
            .orders__export
                a(href="https://bits.media/upload/iblock/848/dzhoel_berch_ya_pokupal_bitkoiny_iz_za_blek_dzheka.jpg" target="_blank" download)
                    svg.orders__export-icon(width="14" height="14")
                        use(xlink:href="#export-icon")
                    span.orders__export-text Export Order History

            .orders__head-wrap
                .orders__head-pair-wrap
                    .orders__head-name Date
                    .search-filter__search
                        input.search-filter__search-input(type="search" placeholder="YYYY-MM-DD-YYYY-MM-DD")
                        button.search-filter__search-img(type="button" aria-label="search button")
                            svg.search-filter__search-icon(width="14" height="14")
                                use(xlink:href="#calendar-icon")

                .orders__head-pair-wrap
                    .orders__head-name Pair

                    .orders__head-pair-select-wrap
                        .orders__head-pair-select
                            select(id="selectPair-1")
                                option(value="1" selected) All
                                option(value="2") All-2
                                option(value="3") All-3
                        span.orders__head-pair-select-line â€”
                        .orders__head-pair-select
                            select(id="selectPair-2")
                                option(value="1" selected) All
                                option(value="2") All-2
                                option(value="3") All-3

                .orders__head-btn-wrap
                    button.orders__head-btn.btn-primary(type="button") Reset
                    button.orders__head-btn.btn-blue(type="button") Search

                label.orders__checkbox-group
                    input.orders__checkbox-input.visually-hidden(type="checkbox")
                    span.orders__checkbox-label Hide all canceled

